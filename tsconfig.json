{
  "compilerOptions": {
    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module resolution */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Bundler", // tốt cho Vite/webpack
    "allowJs": false,
    "jsx": "react-jsx",

    /* Type checking */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Debugging */
    "sourceMap": true,

    /* Project settings */
    "isolatedModules": true,
    "moduleDetection": "force",

    /* (Tuỳ chọn, bật khi cần) */
    // "noUncheckedIndexedAccess": true,
    // "exactOptionalPropertyTypes": true,
    // "declaration": true,
    // "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
